{
  "name": "@nywqs/vue-markdown-editor",
  "version": "0.1.1",
  "description": "A high-performance Markdown editor based on Vue 3 and Canvas with hybrid rendering architecture",
  "keywords": [
    "vue",
    "vue3",
    "markdown",
    "editor",
    "canvas",
    "syntax-highlight",
    "markdown-editor",
    "canvas-editor"
  ],
  "author": "nywqs",
  "repository": {
    "type": "git",
    "url": "https://github.com/leoncheng2030/wqs_editor"
  },
  "homepage": "https://github.com/leoncheng2030/wqs_editor#readme",
  "bugs": {
    "url": "https://github.com/leoncheng2030/wqs_editor/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode lib && npm run build:types",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist-lib",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "license": "MIT",
  "dependencies": {
    "highlight.js": "^11.10.0",
    "katex": "^0.16.27",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@vicons/ionicons5": "^0.13.0",
    "@vicons/utils": "^0.1.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vue-tsc": "^3.2.2"
  },
  "main": "dist-lib/vue-markdown-editor.umd.js",
  "module": "dist-lib/vue-markdown-editor.es.js",
  "style": "dist-lib/wqs_editor.css",
  "files": [
    "dist-lib",
    "README.md"
  ],
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
